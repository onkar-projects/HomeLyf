<?xml version="1.0" encoding="UTF-8"?>
<!-- <!DOCTYPE Configuration log4j:configuration SYSTEM "log4j.dtd"> -->


<Configuration staus="WARN">

	<Properties>
		<property name="basePath">./logs</property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingFile
			name="File" fileName="${basePath}/automation.log"
			filePattern="${basePath}/automation-%d{yyyy-mm-dd}" >
		<SizeBAsedTriggeringPollicy size="50000" />
		</RollingFile>
		
	</Appenders>
	
	<Loggers>
		<Root level="Info">
			<AppenderRef ref="File"/>
		</Root>
	</Loggers>
</Configuration>